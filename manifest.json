{
  "manifest_version": 3,
  "name": "Salesforce Banner",
  "version": "1.0",
  "description": "Adds a thin banner to Salesforce tabs and tracks recently visited setup pages",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.force.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}