{
  "manifest_version": 3,
  "name": "Salesforce Bookmark Manager",
  "version": "1.0",
  "description": "Manage multiple Salesforce orgs with custom headers, bookmarks, and sandbox banner controls for improved organization.",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon128.png",
      "48": "icon128.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.force.com/*", "*://*.salesforce.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["allBookmarks.html", "allBookmarks.js", "allBookmarks.css"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["orgBookmarks.html", "orgBookmarks.js", "orgBookmarks.css"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["popup.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com;"
  }
}
